<%= render "shared/header"%>

<%= form_with model: @user, method: :post, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.label :name, "ニックネーム" %><br />
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 山田太郎", maxlength:"20" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード" %><br />
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <%= f.label :profile, "プロフィール" %><br />
    <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "生年月日" %><br />
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

  <div class="form-group">
    <h2 class='form-bottom-text'>
      <span><%= link_to '利用規約', "#" %></span>に同意して「利用規約に同意して登録」ボタンをクリックしてください。
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "利用規約に同意して登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer"%>
